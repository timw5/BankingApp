@page
@model BankingApp.Pages.Shared.Account.LoginModel
@{
}

<h3 class = "mt-4 text-center mx-auto"> Please Login Below </h3><br>
<div class="container mx-auto w-100 border p-3">
    <form class="mx-auto w-100 py-2" method = "post">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group mt-4">
            <label asp-for="Credentials.Username" class="pb-2"></label>
            <input asp-for="Credentials.Username" type="text" class="form-control pt-2 w-75" name = "Username" id="Username" placeholder="Username" />
            <span class="text-danger" asp-validation-for="Credentials.Username"></span>
        </div>

        <div class="form-group mt-4">
            <label asp-for="Credentials.Password" class="pb-2"> </label>
            <input asp-for="Credentials.Password" type="password" class="form-control pt-2 w-75" name = "Pass" id="Pass" placeholder="Password" />
            <span class="text-danger" asp-validation-for="Credentials.Password"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary mt-4" type="submit" value = "Login">
        </div>
    </form>

    <br>
    <div class=" mx-auto"> 
        Need an account? 
        <a href= "/Account/Register"> Create one Here </a> 
    </div>

</div>